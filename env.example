# Never Missed App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# TESTING CREDENTIALS
# ===========================================

# QA Environment Credentials
QA_PHONE_NUMBER=
QA_PASSWORD=

# Production Environment Credentials (if available)
PROD_PHONE_NUMBER=
PROD_PASSWORD=

# Development Environment Credentials (if available)
DEV_PHONE_NUMBER=
DEV_PASSWORD=

# ===========================================
# APPIUM CONFIGURATION
# ===========================================

# Appium Server Configuration
APPIUM_HOST=localhost
APPIUM_PORT=4723

# Device Configuration
ANDROID_DEVICE_NAME=Pixel_6
ANDROID_PLATFORM_VERSION=12
IOS_DEVICE_NAME=iPhone_14
IOS_PLATFORM_VERSION=16.0

# ===========================================
# APP CONFIGURATION
# ===========================================

# Android App Path
ANDROID_APP_PATH=./apps/android/app-debug.apk

# iOS App Path (if available)
IOS_APP_PATH=./apps/ios/app.app

# ===========================================
# TEST CONFIGURATION
# ===========================================

# Test Environment (qa, dev, prod)
TEST_ENVIRONMENT=qa

# Test Timeouts (in milliseconds)
IMPLICIT_WAIT=15000
PAGE_LOAD_TIMEOUT=30000
SCRIPT_TIMEOUT=30000

# ===========================================
# REPORTING CONFIGURATION
# ===========================================

# Report Output Directories
SCREENSHOTS_DIR=./evidence/screenshots
REPORTS_DIR=./reports
LOGS_DIR=./logs

# ===========================================
# DEBUGGING
# ===========================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info 